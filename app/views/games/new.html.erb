<div class="container">
  <div class="card">
    <h1>NEW GAME</h1>

    <% @letters.each do |letter| %>
      <p class="letter">
        <%= letter %>
      </p>
    <% end %>

    <p>What is the longest word you can find?</p>

    <form action="/score" method="post">
       <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input id="tags_list" name="tags_list" type="hidden" value="<%= @letters.join(",") %>"/>
        <input class="form" type="text" name="word">
        <input class="btn" type="submit" value="Play!">
    </form>
  </div>

</div>
